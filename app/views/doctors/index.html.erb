<h1>Doctors List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Specialization</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.specialization %></td>
        <td>
          <%= link_to 'Show', doctor_path(doctor) %>
          <%= link_to 'Edit', edit_doctor_path(doctor) %>
          <%= link_to 'Delete', doctor_path(doctor), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Doctor', new_doctor_path %>